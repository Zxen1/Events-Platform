<IfModule mod_rewrite.c>
RewriteEngine On

# Safety: do not rewrite real files/folders
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Deep-link support:
# Use 302 while testing; switch to 301 later if desired.
RewriteRule ^post/([^/?#]+)/?$ /?post=$1 [L,R=302,QSA]
RewriteRule ^register/?$ /?register=1 [L,R=302,QSA]
RewriteRule ^post-editor/?$ /?post-editor=1 [L,R=302,QSA]
RewriteRule ^post-editor=([^/?#]+)/?$ /?post-editor-key=$1 [L,R=302,QSA]

</IfModule>


